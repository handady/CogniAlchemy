{
  "name": "CogniAlchemy",
  "version": "1.0.0",
  "description": "CogniAlchemy - an awesome Electron & React application",
  "main": "index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start:react": "cd react-app && npm run dev",
    "build:react": "cd react-app && npm run build",
    "start:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 npx electron ./electron/main.js",
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "build:electron": "electron-builder"
  },
  "build": {
    "appId": "com.example.cognialchemy",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": false,
    "files": [
      "electron/**/*",
      "react-app/dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "concurrently": "^9.1.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  }
}
